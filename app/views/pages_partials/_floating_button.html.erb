<% if user_signed_in? %>
  <div class="fixed-action-btn horizontal">
    <a class="btn-floating btn-large purple waves-effect waves-blue">
      <i class="large material-icons">more_vert</i>
    </a>
    <ul>
      <li>
        <%= link_to edit_user_registration_path , class:"tooltipped btn-floating green waves-effect waves-blue" , 'data-position' => 'top' , 'data-tooltip' => "Account Settings", 'data-delay' => '10' do %>
          <i class="material-icons">mode_edit</i>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path , method: :delete , class:"tooltipped btn-floating red waves-effect waves-yellow" , 'data-position' => 'top' , 'data-tooltip' => "Logout", 'data-delay' => '10' do %>
          <i class="material-icons">power_settings_new</i>
        <% end %>
      </li>
    </ul>
  </div>
<% end %>