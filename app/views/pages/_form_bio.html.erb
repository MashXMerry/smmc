<%= form_for @user , url: update_bio_path(current_user.id) , method: :put do |f| %>
  <div class="modal-content">
  	<center><h4>Add bio</h4></center>
  	<div class="input-field">
  		<i class="material-icons prefix">create</i>
  		<label>Add bio</label>
  		<%= f.text_field :bio %>
  	</div>
  </div>
  <div class="modal-footer">
  	<a class="modal-action modal-close waves-effect waves-yellow btn-flat red">Cancel</a>
  	<%= f.submit "Save" , class: "modal-action waves-effect waves-blue btn-flat green" %>
  </div>
<% end %>