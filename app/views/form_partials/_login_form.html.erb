<a class="waves-effect waves-light btn modal-trigger" href="#modal1">Login</a>
<!-- Modal Structure -->
<div id="modal1" class="modal">
	<%= form_for(:user , :url => session_path(:user)) do |f| %>
	  <div class="modal-content">	
	  	<center><h4>Login</h4></center><br>
	  	<div class="input-field">
	  		<i class="material-icons prefix">email</i>
	  		<label>Email</label>
	  		<%= f.text_field :email , autofocus: true %>
	  	</div>
	  	<div class="input-field">
	  		<i class="material-icons prefix">lock</i>
	  		<label>Password</label>
	  		<%= f.password_field :password %>
	  	</div>
	  </div>
	  <div class="modal-footer">
	    <a class="modal-action modal-close waves-effect waves-yellow btn-flat red white-text">close</a>
	    <%= f.submit "Log in" , class:"btn waves-effect waves-blue purple" ,
       data: { disable_with: "Logging in.." } ,
       id: "login-button" %>
	  </div>
  <% end %>
</div>